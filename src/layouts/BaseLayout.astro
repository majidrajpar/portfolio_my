---
import '../styles/global.css';
import Navbar from '../components/Navbar';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const {
  title,
  description = 'Chief Audit Executive and board advisor with 20+ years GCC experience. Building world-class internal audit functions — department design, tool implementation, and credible board assurance for UAE and KSA organisations.',
  ogImage = '/portfolio_my/images/majid-profile.jpg'
} = Astro.props;

const canonicalUrl = new URL(Astro.url.pathname, Astro.site);
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="author" content="Majid Mumtaz" />
  <meta name="description" content={description} />

  <!-- Canonical -->
  <link rel="canonical" href={canonicalUrl} />

  <!-- Open Graph -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content={canonicalUrl} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={`https://majidrajpar.github.io${ogImage}`} />
  <meta property="og:site_name" content="Majid Mumtaz | Chief Audit Executive" />

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={`https://majidrajpar.github.io${ogImage}`} />

  <link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}favicon.svg`} />
  <title>{title}</title>

  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet" />

  <!-- Google Analytics GA4 -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-9GCK25N9C5"></script>
  <script is:inline>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-9GCK25N9C5');
  </script>
</head>
<body class="min-h-screen">

  <!-- Navbar: React island for scroll-aware behaviour -->
  <Navbar client:load />

  <!-- Main Content -->
  <main>
    <slot />
  </main>

  <!-- Footer -->
  <footer class="py-14 bg-[#001F5B] border-t border-white/10">
    <div class="max-w-7xl mx-auto px-8">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-10 mb-12">
        <!-- Brand -->
        <div class="md:col-span-2">
          <div class="text-white font-black text-xs uppercase tracking-[0.3em] mb-3">Majid Mumtaz</div>
          <p class="text-white/50 text-xs leading-relaxed max-w-xs">
            Fractional CAE & Board Advisor. Building internal audit functions from zero for GCC boards — UAE and KSA.
          </p>
          <div class="flex gap-4 mt-5">
            <a href="https://www.linkedin.com/in/majid-m-4b097118/" target="_blank" rel="noopener noreferrer"
               class="text-white/40 hover:text-white text-[10px] font-black uppercase tracking-widest transition-colors">LinkedIn ↗</a>
            <a href="https://www.linkedin.com/newsletters/7339153291630510080/" target="_blank" rel="noopener noreferrer"
               class="text-white/40 hover:text-white text-[10px] font-black uppercase tracking-widest transition-colors">Newsletter ↗</a>
          </div>
        </div>
        <!-- Pages -->
        <div>
          <div class="text-white/30 text-[10px] font-black uppercase tracking-widest mb-4">Pages</div>
          <ul class="space-y-2">
            {[
              { label: 'About', href: `${base}/about/` },
              { label: 'Projects', href: `${base}/projects/` },
              { label: 'Advisory', href: `${base}/consulting/` },
              { label: 'Newsletter', href: 'https://www.linkedin.com/newsletters/7339153291630510080/' },
              { label: 'Resources', href: `${base}/resources/` },
              { label: 'Contact', href: `${base}/contact/` },
            ].map(link => (
              <li><a href={link.href} class="text-white/50 hover:text-white text-xs font-bold transition-colors">{link.label}</a></li>
            ))}
          </ul>
        </div>
        <!-- Contact -->
        <div>
          <div class="text-white/30 text-[10px] font-black uppercase tracking-widest mb-4">Contact</div>
          <ul class="space-y-2">
            <li><a href="mailto:majidrajpar@gmail.com" class="text-white/50 hover:text-white text-xs font-bold transition-colors">majidrajpar@gmail.com</a></li>
            <li><span class="text-white/50 text-xs font-bold">Dubai, UAE</span></li>
            <li><a href={`${base}/cv/Majid-Mumtaz-Internal-Audit-Director-UAE-KSA-CV.pdf`} download class="text-white/50 hover:text-white text-xs font-bold transition-colors">Download CV</a></li>
          </ul>
        </div>
      </div>
      <div class="border-t border-white/10 pt-6 text-center">
        <div class="text-white/30 text-[9px] uppercase tracking-[0.5em] font-black">
          &copy; {new Date().getFullYear()} Majid Mumtaz CIA, ACA, FCCA. All Rights Reserved.
        </div>
      </div>
    </div>
  </footer>

  <!-- IntersectionObserver for data-reveal animations -->
  <script is:inline>
    (function() {
      const io = new IntersectionObserver(
        function(entries) {
          entries.forEach(function(entry) {
            if (entry.isIntersecting) {
              entry.target.classList.add('in-view');
              io.unobserve(entry.target);
            }
          });
        },
        { rootMargin: '-60px' }
      );
      document.querySelectorAll('[data-reveal]').forEach(function(el) {
        io.observe(el);
      });
    })();
  </script>

</body>
</html>
