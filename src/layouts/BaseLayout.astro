---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Majid Mumtaz - Chief Audit Executive | Transitioning Internal Audit from Compliance to Profit Protection' } = Astro.props;

const base = import.meta.env.BASE_URL;

const navItems = [
  { href: `${base}`, label: 'Home' },
  { href: `${base}about/`, label: 'About' },
  { href: `${base}projects/`, label: 'Projects' },
  { href: `${base}consulting/`, label: 'Advisory' },
  { href: `${base}contact/`, label: 'Contact' },
];

const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <meta name="author" content="Majid Mumtaz">

  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <title>{title}</title>

  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
</head>
<body class="min-h-screen">
  <!-- Executive Command Navigation -->
  <header>
    <nav>
      {navItems.map(item => (
        <a
          href={item.href}
          class={`nav-link ${currentPath === item.href ? 'active' : ''}`}
        >
          {item.label}
        </a>
      ))}
    </nav>
  </header>

  <!-- Main Content Area -->
  <main>
    <slot />
  </main>

  <!-- Executive Footer -->
  <footer class="py-20 bg-slate-950 border-t border-white/5">
    <div class="container">
      <div class="mb-12">
        <span class="text-3xl font-black tracking-tighter text-white">MAJID MUMTAZ</span>
        <p class="mt-4 text-slate-400">Chief Audit Executive | Head of Audit & Risk</p>
      </div>
      
      <div class="flex flex-wrap justify-center gap-12 mb-12">
        <a href="mailto:majidrajpar@gmail.com" class="text-slate-400 hover:text-white transition-colors">majidrajpar@gmail.com</a>
        <a href="https://www.linkedin.com/in/majid-m-4b097118/" target="_blank" class="text-slate-400 hover:text-white transition-colors">LinkedIn</a>
        <a href="https://veritux.com/consultants/majid-mumtaz/" target="_blank" class="text-slate-400 hover:text-white transition-colors">Veritux Network</a>
      </div>

      <div class="text-slate-500 text-xs uppercase tracking-widest">
        &copy; {new Date().getFullYear()} Majid Mumtaz CIA, ACA, FCCA. All Rights Reserved.
      </div>
    </div>
  </footer>
</body>
</html>
