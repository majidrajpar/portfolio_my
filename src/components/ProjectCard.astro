---
import TechBadge from './TechBadge.astro';

interface Props {
  title: string;
  description: string;
  image?: string;
  imageAlt?: string;
  href: string;
  category: string;
  impact?: string;
  techStack: Array<{ name: string; color?: string }>;
}

const { title, description, image, imageAlt, href, category, impact, techStack } = Astro.props;
---

<article class="glass-card flex flex-col p-8 md:p-10 h-full text-left">
  <div class="mb-6">
    <span class="inline-block px-3 py-1 text-[10px] font-black uppercase tracking-[0.2em] bg-blue-500/10 text-blue-400 border border-blue-500/20 rounded-full">
      {category}
    </span>
  </div>

  <h3 class="text-2xl font-bold text-white mb-4 leading-tight group-hover:text-blue-400 transition-colors">
    {title}
  </h3>

  <p class="text-slate-400 text-base mb-8 flex-1 leading-relaxed">
    {description}
  </p>

  {impact && (
    <div class="mb-8 p-4 bg-emerald-500/5 border border-emerald-500/10 rounded-xl">
      <div class="text-[10px] font-black text-emerald-500 uppercase tracking-widest mb-1">Impact Delivered</div>
      <div class="text-white font-bold leading-snug">{impact}</div>
    </div>
  )}

  <div class="flex flex-wrap gap-2 mb-8">
    {techStack.map(tech => (
      <TechBadge tech={tech.name} color={tech.color as any} />
    ))}
  </div>

  <a
    href={href}
    class="inline-flex items-center text-white font-bold text-xs uppercase tracking-widest hover:text-blue-400 transition-colors group"
  >
    Analyze Case Study
    <svg
      class="w-4 h-4 ml-2 group-hover:translate-x-2 transition-transform"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
    </svg>
  </a>
</article>
