---
interface Props {
  title: string;
  description: string;
  href: string;
  category: string;
  impact?: string;
  techStack: Array<{ name: string }>;
}

const { title, description, href, category, impact, techStack } = Astro.props;
---

<article class="bg-white border border-slate-200 flex flex-col p-8 hover:shadow-md transition-shadow h-full text-left">
  <div class="mb-5">
    <span class="inline-block px-3 py-1 text-[10px] font-black uppercase tracking-[0.2em] bg-[#001F5B] text-white">
      {category}
    </span>
  </div>

  <h3 class="text-xl font-black text-slate-900 mb-4 leading-tight">
    {title}
  </h3>

  <p class="text-slate-600 text-sm mb-6 flex-1 leading-relaxed">
    {description}
  </p>

  {impact && (
    <div class="mb-6 pl-4 border-l-4 border-[#001F5B]">
      <div class="text-[10px] font-black text-[#001F5B] uppercase tracking-widest mb-1">Impact</div>
      <div class="text-slate-900 font-bold text-sm leading-snug">{impact}</div>
    </div>
  )}

  <div class="flex flex-wrap gap-2 mb-6">
    {techStack.map(tech => (
      <span class="px-2 py-1 text-[10px] font-bold uppercase tracking-wider bg-slate-100 text-slate-600 border border-slate-200">
        {tech.name}
      </span>
    ))}
  </div>

  <a
    href={href}
    class="inline-flex items-center text-[#001F5B] font-black text-xs uppercase tracking-widest hover:text-blue-700 transition-colors"
  >
    View Case Study
    <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
    </svg>
  </a>
</article>
