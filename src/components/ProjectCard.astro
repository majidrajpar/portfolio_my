---
import TechBadge from './TechBadge.astro';

interface Props {
  title: string;
  description: string;
  image?: string;
  imageAlt?: string;
  href: string;
  category: string;
  impact?: string;
  techStack: Array<{ name: string; color?: string }>;
}

const { title, description, image, imageAlt, href, category, impact, techStack } = Astro.props;
---

<article class="card overflow-hidden h-full flex flex-col">
  <!-- Project Image -->
  {image && (
    <div class="relative h-48 bg-gradient-to-br from-blue-50 to-gray-100 overflow-hidden">
      <img
        src={image}
        alt={imageAlt || title}
        class="w-full h-full object-cover"
        loading="lazy"
      />
      <div class="absolute top-3 right-3">
        <span class="inline-block px-3 py-1 text-xs font-semibold bg-white/90 backdrop-blur-sm text-gray-700 rounded-full">
          {category}
        </span>
      </div>
    </div>
  )}

  {!image && (
    <div class="relative h-48 bg-gradient-to-br from-blue-100 to-blue-50 flex items-center justify-center">
      <div class="text-6xl text-blue-300">
        ðŸ“Š
      </div>
      <div class="absolute top-3 right-3">
        <span class="inline-block px-3 py-1 text-xs font-semibold bg-white/90 backdrop-blur-sm text-gray-700 rounded-full">
          {category}
        </span>
      </div>
    </div>
  )}

  <!-- Project Content -->
  <div class="p-6 flex-1 flex flex-col">
    <h3 class="text-xl font-bold text-gray-900 mb-2">
      {title}
    </h3>

    <p class="text-gray-600 text-sm mb-4 flex-1">
      {description}
    </p>

    <!-- Impact Metric -->
    {impact && (
      <div class="mb-4 p-3 bg-green-50 border border-green-200 rounded-lg">
        <div class="text-xs font-semibold text-green-800 mb-1">Business Impact</div>
        <div class="text-sm font-bold text-green-900">{impact}</div>
      </div>
    )}

    <!-- Tech Stack -->
    <div class="mb-4">
      <div class="flex flex-wrap gap-2">
        {techStack.map(tech => (
          <TechBadge tech={tech.name} color={tech.color as any} />
        ))}
      </div>
    </div>

    <!-- View Details Link -->
    <a
      href={href}
      class="inline-flex items-center text-blue-600 font-semibold hover:text-blue-700 transition-colors group"
    >
      View Details
      <svg
        class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
    </a>
  </div>
</article>
