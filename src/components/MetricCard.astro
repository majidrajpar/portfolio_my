---
interface Props {
  value: string;
  label: string;
  icon?: string;
  isSuccess?: boolean;
}

const { value, label, icon, isSuccess = false } = Astro.props;
---

<div class="glass-card group flex flex-col items-center">
  {icon && (
    <div class="text-3xl mb-4 group-hover:scale-110 transition-transform duration-500">
      {icon}
    </div>
  )}
  <div class={`metric-value ${isSuccess ? 'metric-success' : ''}`}>
    {value}
  </div>
  <div class="text-slate-400 font-bold uppercase tracking-widest text-xs">
    {label}
  </div>
</div>
