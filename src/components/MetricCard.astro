---
interface Props {
  value: string;
  label: string;
}

const { value, label } = Astro.props;
---

<div class="bg-white border border-slate-200 pt-5 pb-6 px-5 border-t-2 border-t-[#001F5B] hover:shadow-md transition-shadow">
  <div class="text-3xl font-black text-[#001F5B] mb-2 leading-none">{value}</div>
  <div class="text-[10px] font-black uppercase tracking-widest text-slate-500 leading-snug">{label}</div>
</div>
