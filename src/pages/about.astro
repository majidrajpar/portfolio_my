---
import BaseLayout from '../layouts/BaseLayout.astro';
import MetricCard from '../components/MetricCard.astro';
const base = import.meta.env.BASE_URL;

const books = [
  { title: 'Handbook of Risk Red Flags in Restaurants', desc: "A practitioner's guide to preventing failure through early detection of risk indicators.", url: 'https://www.amazon.com/dp/B0GDTBRZPM', cover: `${base}images/books/risk-red-flags.jpg` },
  { title: 'The Un-Financial Risk Manager', desc: 'Protecting value in the real world — ESG, cyber, and emerging strategic risks.', url: 'https://www.amazon.com/dp/B0GDMW53GG', cover: `${base}images/books/unfinancial-risk-manager.jpg` },
  { title: '10 Forensic Accounting Skills', desc: 'Practical handbook on fraud detection, forensic investigation, and evidence management.', url: 'https://www.amazon.com/dp/B0G7T4X3RT', cover: `${base}images/books/forensic-accounting-skills.jpg` },
  { title: 'ITGC Program Guide', desc: 'A strategic approach to IT General Controls — security, compliance, and enterprise value protection.', url: 'https://www.amazon.com/dp/B0FCG96QS8', cover: `${base}images/books/itgc-program-guide.jpg` },
  { title: 'Internal Audit Guide for Dine-In Locations in the Middle East', desc: 'Comprehensive audit guide for restaurant operations in the GCC region.', url: 'https://www.amazon.com/dp/B0DY2NRPQ9', cover: `${base}images/books/internal-audit-dinein.jpg` },
];

const metrics = [
  { value: 'AED 3.2M', label: 'Recurring Annual Recovery — Fraud Detection' },
  { value: '$127M', label: 'M&A Due Diligence — Workstream Lead' },
  { value: '78%', label: 'Reduction in Fraud Incidents' },
  { value: '20+', label: 'Years GCC Leadership' },
  { value: '100%', label: 'Population Testing — Across 70+ Locations' },
  { value: '3', label: 'Listing Readiness Programmes Delivered' },
];
---

<BaseLayout
  title="About | Majid Mumtaz — Chief Audit Executive"
  description="20+ years building world-class internal audit functions across the GCC. CIA, ACA, FCCA. Big 4 trained. IPO readiness, fraud detection, board assurance."
>
  <!-- Hero -->
  <section class="pt-32 pb-20 bg-[#001F5B]">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">
      <div class="max-w-3xl" data-reveal>
        <span class="inline-block text-[10px] font-black uppercase tracking-[0.3em] text-white/60 mb-6">Leadership Profile</span>
        <h1 class="text-5xl lg:text-6xl font-black text-white mb-6 leading-tight">
          About.
        </h1>
        <p class="text-xl text-white/70 leading-relaxed max-w-2xl">
          Chief Audit Executive and Board Advisor with 20+ years building world-class internal audit functions across the GCC.
        </p>
      </div>
    </div>
  </section>

  <!-- Bio -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-start">
        <!-- Photo -->
        <div data-reveal>
          <div class="aspect-[4/5] bg-slate-100 overflow-hidden max-w-sm">
            <img
              src={`${base}images/majid-profile.jpg`}
              alt="Majid Mumtaz — Chief Audit Executive"
              class="w-full h-full object-cover"
              loading="lazy"
            />
          </div>
          <!-- Social Proof Strip -->
          <div class="mt-6 flex flex-wrap gap-3">
            <a href="https://www.linkedin.com/in/majid-m-4b097118/" target="_blank" rel="noopener noreferrer"
               class="inline-flex items-center gap-2 px-4 py-2 border border-slate-200 text-[10px] font-black uppercase tracking-widest text-slate-700 hover:border-[#001F5B] hover:text-[#001F5B] transition-colors">
              LinkedIn Profile ↗
            </a>
            <a href="https://www.linkedin.com/newsletters/7339153291630510080/" target="_blank" rel="noopener noreferrer"
               class="inline-flex items-center gap-2 px-4 py-2 border border-slate-200 text-[10px] font-black uppercase tracking-widest text-slate-700 hover:border-[#001F5B] hover:text-[#001F5B] transition-colors">
              Newsletter ↗
            </a>
          </div>
        </div>

        <!-- Bio Text -->
        <div data-reveal data-reveal-delay="1">
          <span class="text-[10px] font-black uppercase tracking-[0.3em] text-[#001F5B] mb-4 block">Biography</span>
          <h2 class="text-4xl font-black text-slate-900 mb-8 leading-tight">Majid Mumtaz<br/><span class="text-slate-400 font-normal text-2xl">CIA, ACA, FCCA</span></h2>
          <div class="space-y-5 text-slate-600 leading-relaxed">
            <p>
              I build world-class internal audit functions. Over 20 years across the GCC, I have designed and led internal audit departments from inception — embedding the governance structures, control frameworks, and technology platforms that give boards credible, board-grade assurance.
            </p>
            <p>
              My work spans three interconnected domains: <strong class="text-slate-900">IA function building</strong> (designing departments, hiring teams, embedding IIA standards), <strong class="text-slate-900">forensic analytics and fraud detection</strong> (ML-powered continuous monitoring, population testing, fraud investigation), and <strong class="text-slate-900">board assurance and IPO readiness</strong> (ICOFR, COSO ERM, regulatory compliance for DFM, Tadawul, and Nomu listings).
            </p>
            <p>
              Big 4 trained (Ernst & Young, KPMG), I combine technical rigour with executive communication — translating complex risk and control findings into board-level insight that drives decisions, not just compliance.
            </p>
            <p>
              Based in Dubai, UAE. Available for consulting engagements, interim CAE mandates, and board advisory across the GCC region.
            </p>
          </div>

          <!-- Credentials Row -->
          <div class="mt-10 pt-10 border-t border-slate-100 grid grid-cols-3 gap-6">
            <div>
              <div class="text-[10px] font-black uppercase tracking-widest text-slate-400 mb-2">Certifications</div>
              <div class="space-y-1">
                <div class="text-xs font-bold text-slate-900">CIA</div>
                <div class="text-xs font-bold text-slate-900">ACA</div>
                <div class="text-xs font-bold text-slate-900">FCCA</div>
                <div class="text-xs font-bold text-slate-900">COSO ERM</div>
              </div>
            </div>
            <div>
              <div class="text-[10px] font-black uppercase tracking-widest text-slate-400 mb-2">Background</div>
              <div class="space-y-1">
                <div class="text-xs font-bold text-slate-900">Ernst & Young</div>
                <div class="text-xs font-bold text-slate-900">KPMG</div>
                <div class="text-xs font-bold text-slate-900">20+ Years GCC</div>
              </div>
            </div>
            <div>
              <div class="text-[10px] font-black uppercase tracking-widest text-slate-400 mb-2">Technical</div>
              <div class="space-y-1">
                <div class="text-xs font-bold text-slate-900">Python / ML</div>
                <div class="text-xs font-bold text-slate-900">COSO / IIA</div>
                <div class="text-xs font-bold text-slate-900">IFRS / SOX</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Signature Capabilities -->
  <section class="py-24 bg-slate-50">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">
      <div class="mb-14" data-reveal>
        <span class="text-[10px] font-black uppercase tracking-[0.3em] text-[#001F5B] mb-4 block">Core Practice Areas</span>
        <h2 class="text-4xl font-black text-slate-900">Signature Capabilities.</h2>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="glass-card p-8" data-reveal data-reveal-delay="1">
          <div class="w-10 h-10 flex items-center justify-center mb-6 bg-[#001F5B]">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
            </svg>
          </div>
          <h3 class="text-lg font-black text-slate-900 mb-3">IA Function Building</h3>
          <p class="text-sm text-slate-600 leading-relaxed">
            Designing and building internal audit departments from the ground up — charter, methodology, risk-based audit plans, team structure, and IIA Standards alignment. From zero to board-grade assurance.
          </p>
        </div>

        <div class="glass-card p-8" data-reveal data-reveal-delay="2">
          <div class="w-10 h-10 flex items-center justify-center mb-6 bg-[#001F5B]">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
          </div>
          <h3 class="text-lg font-black text-slate-900 mb-3">Forensic Analytics & Fraud Detection</h3>
          <p class="text-sm text-slate-600 leading-relaxed">
            ML-powered continuous monitoring across 100% of transactions. Isolation Forest anomaly detection, Benford's Law analysis, and pattern recognition deployed across 2.3M+ monthly transactions.
          </p>
        </div>

        <div class="glass-card p-8" data-reveal data-reveal-delay="3">
          <div class="w-10 h-10 flex items-center justify-center mb-6 bg-[#001F5B]">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
            </svg>
          </div>
          <h3 class="text-lg font-black text-slate-900 mb-3">Board Assurance & IPO Readiness</h3>
          <p class="text-sm text-slate-600 leading-relaxed">
            End-to-end ICOFR implementation, COSO ERM frameworks, and regulatory compliance for DFM, Tadawul, and Nomu listings. Structured, board-grade reporting that satisfies both regulators and investors.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Impact Metrics -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">
      <div class="mb-14" data-reveal>
        <span class="text-[10px] font-black uppercase tracking-[0.3em] text-[#001F5B] mb-4 block">Quantified Impact</span>
        <h2 class="text-4xl font-black text-slate-900">Results.</h2>
      </div>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
        {metrics.map((m, i) => (
          <div data-reveal data-reveal-delay={String((i % 3) + 1)}>
            <MetricCard value={m.value} label={m.label} />
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Books -->
  <section class="py-24 bg-slate-50" id="books">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">
      <div class="mb-14" data-reveal>
        <span class="text-[10px] font-black uppercase tracking-[0.3em] text-[#001F5B] mb-4 block">Published Works</span>
        <h2 class="text-4xl font-black text-slate-900">5 Books on Amazon.</h2>
        <p class="text-slate-600 mt-3">Sharing knowledge across internal audit, risk management, and forensic accounting.</p>
      </div>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-6">
        {books.map((book, i) => (
          <a
            href={book.url}
            target="_blank"
            rel="noopener noreferrer"
            class="glass-card overflow-hidden flex flex-col group hover:border-[#001F5B]/40 transition-all"
            data-reveal
            data-reveal-delay={String((i % 3) + 1)}
          >
            <div class="aspect-[2/3] bg-slate-100 overflow-hidden">
              <img
                src={book.cover}
                alt={book.title}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
                loading="lazy"
              />
            </div>
            <div class="p-4 flex flex-col flex-1">
              <h4 class="text-slate-900 font-black text-xs mb-2 leading-snug group-hover:text-[#001F5B] transition-colors line-clamp-3">{book.title}</h4>
              <div class="flex justify-end items-center mt-auto pt-2">
                <span class="text-[9px] font-black text-[#001F5B] uppercase tracking-widest">Amazon ↗</span>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-24 bg-[#001F5B]">
    <div class="max-w-7xl mx-auto px-6 lg:px-12 text-center" data-reveal>
      <h2 class="text-4xl font-black text-white mb-6">Let's Work Together.</h2>
      <p class="text-white/70 text-lg mb-10 max-w-xl mx-auto">
        Available for consulting engagements, interim CAE mandates, and board advisory across the GCC.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href={`${base}contact/`} class="btn-primary">Start the Conversation</a>
        <a href={`${base}projects/`} class="btn-secondary-light">View Client Outcomes</a>
      </div>
    </div>
  </section>
</BaseLayout>
