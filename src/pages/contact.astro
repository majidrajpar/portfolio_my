            <form
              action="https://formsubmit.co/majidrajpar@gmail.com"
              method="POST"
              class="space-y-6"
            >
              <input type="hidden" name="_subject" value="Portfolio Inquiry ‚Äî Majid Mumtaz" />
              <input type="hidden" name="_captcha" value="false" />
