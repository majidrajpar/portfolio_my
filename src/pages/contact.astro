---
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactForm from '../components/ContactForm';
const base = import.meta.env.BASE_URL;
---

<BaseLayout
  title="Contact | Majid Mumtaz — CIA, ACA, FCCA"
  description="Discuss consulting engagements, interim CAE mandates, board advisory, or IPO readiness. Available across the GCC. Typically responds within 24 hours."
>
  <!-- Hero -->
  <section class="pt-32 pb-20 bg-[#001F5B]">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">
      <div class="max-w-3xl" data-reveal>
        <span class="text-[10px] font-black uppercase tracking-[0.3em] text-white/60 mb-6 block">Get in Touch</span>
        <h1 class="text-5xl lg:text-6xl font-black text-white mb-6 leading-tight">
          Let's Work Together.
        </h1>
        <p class="text-xl text-white/70 leading-relaxed max-w-2xl">
          Consulting engagements, interim CAE mandates, and board advisory across the GCC. Typically responds within 24 hours.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Grid -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">
      <div class="grid grid-cols-1 lg:grid-cols-5 gap-12">

        <!-- Left: Contact Info -->
        <div class="lg:col-span-2 space-y-8" data-reveal>
          <div>
            <span class="text-[10px] font-black uppercase tracking-[0.3em] text-[#001F5B] mb-4 block">Direct Contact</span>
            <h2 class="text-3xl font-black text-slate-900 mb-8">Contact Details.</h2>
          </div>

          <!-- Email -->
          <div class="flex items-start gap-4">
            <div class="w-10 h-10 bg-[#001F5B] flex items-center justify-center flex-shrink-0">
              <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <div>
              <div class="text-[10px] font-black uppercase tracking-widest text-slate-400 mb-1">Email</div>
              <a href="mailto:majidrajpar@gmail.com" class="text-[#001F5B] font-bold text-sm hover:text-blue-700 transition-colors">
                majidrajpar@gmail.com
              </a>
            </div>
          </div>

          <!-- Location -->
          <div class="flex items-start gap-4">
            <div class="w-10 h-10 bg-[#001F5B] flex items-center justify-center flex-shrink-0">
              <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </div>
            <div>
              <div class="text-[10px] font-black uppercase tracking-widest text-slate-400 mb-1">Location</div>
              <div class="text-slate-900 font-bold text-sm">Dubai, United Arab Emirates</div>
              <div class="text-slate-500 text-xs mt-0.5">Golden Visa Holder</div>
            </div>
          </div>

          <!-- LinkedIn -->
          <div class="flex items-start gap-4">
            <div class="w-10 h-10 bg-[#001F5B] flex items-center justify-center flex-shrink-0">
              <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </div>
            <div>
              <div class="text-[10px] font-black uppercase tracking-widest text-slate-400 mb-1">LinkedIn</div>
              <a href="https://www.linkedin.com/in/majid-m-4b097118/" target="_blank" rel="noopener noreferrer"
                 class="text-[#001F5B] font-bold text-sm hover:text-blue-700 transition-colors">
                linkedin.com/in/majid-m ↗
              </a>
            </div>
          </div>

          <!-- Availability -->
          <div class="bg-[#001F5B] p-6 mt-4">
            <div class="text-[10px] font-black uppercase tracking-widest text-white/60 mb-3">Availability</div>
            <p class="text-white text-sm leading-relaxed">
              Currently available for consulting engagements, interim leadership roles, and project-based advisory across the GCC.
            </p>
            <p class="text-white/60 text-xs mt-3">
              Response within 24 hours (Sun–Thu, GCC time zone).
            </p>
          </div>

          <!-- CV Download -->
          <div>
            <a
              href={`${base}downloads/Majid_Mumtaz_CV.pdf`}
              class="inline-flex items-center gap-2 px-5 py-3 border-2 border-[#001F5B] text-[#001F5B] font-black text-xs uppercase tracking-widest hover:bg-[#001F5B] hover:text-white transition-all"
              download
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
              Download CV
            </a>
          </div>
        </div>

        <!-- Right: Contact Form -->
        <div class="lg:col-span-3" data-reveal data-reveal-delay="1">
          <span class="text-[10px] font-black uppercase tracking-[0.3em] text-[#001F5B] mb-4 block">Send a Message</span>
          <h2 class="text-3xl font-black text-slate-900 mb-8">Start the Conversation.</h2>
          <ContactForm client:load />
        </div>

      </div>
    </div>
  </section>
</BaseLayout>
