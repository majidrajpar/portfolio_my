    href: `${base}projects/fraud-detection/`,
    techStack: [
      { name: 'Python', color: 'blue' },
      { name: 'scikit-learn', color: 'orange' },
      { name: 'Pandas', color: 'green' },
      { name: 'ML', color: 'purple' }
